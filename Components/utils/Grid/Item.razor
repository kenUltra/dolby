<div class="ch-item dt-58-@cls" >
   <div class="wp-once">
      <div class="detail">
         <div class="headline @hideTxt">
            <h2>
              <span class="txt">@headline</span>
              <span class="link">
                 <svg xmlns="http://www.w3.org/2000/svg" width="14" height="12">
                        <path d="M6 0v2H2v8h10V8h2v3a1 1 0 01-1 1H1a1 1 0 01-1-1V1a1 1 0 011-1h5zm8 0v6h-2V3.413L7.878 7.536 6.464 6.12 10.585 2H8V0h6z" fill="#FFF" fill-rule="evenodd"/>
                  </svg>
              </span>
            </h2>
         </div>
      </div>
      <div class="hidden-st"></div>
      <div class="cover">
         <div class="cover-container">
             <picture>
                <img src="@imageDetail" alt="Dolby image of @headline" loading="eager" /> 
             </picture>
         </div>
      </div>
      <div class="linkPage">
         <div class="entry-link">
            <NavLink  href="dolby-atmos" class="link-p" @onmouseleave="hoverAction" @onmouseover="thing">
               <span class="dt-links"><p>Doldy</p> </span>
            </NavLink>
         </div> 
      </div>
   </div>
</div>


@code {
   [Parameter]
   public string headline { get; set; } = "";
   [Parameter]
   public string imageDetail { get; set; } = "";
   [Parameter]
   public string cls { get; set; } = "";

   [Parameter]
   public string hideTxt{ get; set; } = "";


   public void focus(){
      Console.WriteLine("mouse on st");
   }
   public void hoverAction(){
      this.hideTxt = "";
   }
   public void thing(){
      this.hideTxt = "btn-act";

   }
}